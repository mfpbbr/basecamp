<!DOCTYPE html>
<html>
<head>
  <title>Basecamp</title>
  <%= stylesheet_link_tag "reset", "scaffold", "basecamp", "button" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
  <h1 class="light">Project name</h1>
  
  <div id="nav">
    <ul>
      <li><%= link_to_unless(controller.controller_name == 'dashboard', 'Dashboard', dashboard_path) { '<div class="active">Dashboard</div>'.html_safe } %></li>
      <li><%= link_to_unless(controller.controller_name == 'tasks', 'Tasks', tasks_index_path) { '<div class="active">Tasks</div>'.html_safe } %></li>
      <li><%= link_to_unless(controller.controller_name == 'tickets', 'Tickets', tickets_path) { '<div class="active">Tickets</div>'.html_safe } %></li>
    </ul>
  </div>
</div>

<div id="wrap">

  <div id="content">
    <%= yield %>
  </div>
  
  <div id="sidebar">
    <div class="large green button">
      &plus; Add new task
    </div>
  </div>

  <div style="clear:both;"></div>
</div>

</body>
</html>
